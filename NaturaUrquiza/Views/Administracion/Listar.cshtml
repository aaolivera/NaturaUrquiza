@using Dominio.Consultas
@using Dominio.Dto
@using Dominio.Recursos
@using NaturaUrquiza.Helpers
@{
    Layout = null;
    var items = (ListaPaginada<ProductoDto>) ViewBag.Items;
}

<style>
    th {
    font-size: 1em;
    }
</style> 
@Html.Grilla(items,
    grilla => grilla.Columns(
    grilla.ColumnaEliminarModificar(Html, "Administracion"),
    grilla.Columna("Nombre", Textos.Nombre),
    grilla.Columna("Precio", Textos.Precio),
    grilla.Columna("PrecioPromocional", Textos.PrecioPromocional),
    grilla.Columna("Puntos", Textos.Puntos),
    grilla.Columna("Categoria", Textos.Categoria)
    ))

