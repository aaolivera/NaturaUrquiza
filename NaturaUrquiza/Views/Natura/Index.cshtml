                        @Html.ValidationMessageFor(model => model.DescripcionCorta)
                    </div>
                </div>*@
            </div>
            <div class="modal-footer">
                <input id="dialogo-comprar-comprar" type="button" class="btn btn-primary" value="@Textos.Comprar"/>
                <input id="dialogo-comprar-cancelar" type="button" class="btn" data-dismiss="modal" value="@Textos.Cancelar"/>
            </div>
        </div>
    </div>
</div>
