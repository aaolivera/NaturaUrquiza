@using Dominio.Recursos
@model Dominio.Dto.CompraDto
@{
    Layout = null;
    ViewBag.Title = "Comprar";
}
@Scripts.Render("~/bundles/jqueryval")
<script type='text/javascript' src='~/Scripts/jquery.maskedinput-1.3.1.js'></script>
<script type='text/javascript' src='~/Scripts/comprar.js'></script>

@using (Ajax.BeginForm("Comprar", "Natura", new AjaxOptions(), new { @class = "form-horizontal search-form", data_dialogo_titulo = Textos.Producto_Crear, enctype = "multipart/form-data" }))
{
    <div>
        <div>
            <div class="control-label col-sm-4" style="padding-top: 0"><strong class="producto-linea">Producto</strong></div>
            <div class="col-sm-6"><span class="producto-linea">Precio</span></div>
        </div>
    </div>

    <div data-bind="foreach: Productos">
        <div class="rowSombreada">
            <div class="control-label col-sm-4" style="padding-top: 0"><strong class="producto-linea" data-bind="text: Nombre"></strong></div>
            <div class="col-md-6" ><span class="producto-linea" data-bind="text: PrecioVisible"></span></div>
            <a class="quitarProducto" style="width: 0; float: left">×</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" style="width: 38.9%;"></div>
        <div class="col-md-4">
            <strong class="producto-linea" data-bind="text: Total.Nombre"></strong>
            <span class="producto-linea" data-bind="    text: Total.PrecioVisible"></span>
        </div>
    </div>
    <br/>
    
    @Html.HiddenFor(model => model.Productos, new { @data_bind = "value: ko.toJSON($root.Productos())" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-sm-4 input-sm" })
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Mail, new { @class = "control-label col-sm-4 input-sm" })
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.Mail, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(model => model.Mail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, new { @class = "control-label col-sm-4 input-sm" })
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(model => model.Telefono)
        </div>
    </div>
}
