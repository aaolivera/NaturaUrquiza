        {
            <h5>Imagen Actual: <small>@Html.DisplayFor(model => model.FotoPath)</small></h5>
        }
        <div id="fileimput">
            <input type="file" id="fileupload" name="fileupload" accept="image/*" style="width: 100%;">
        </div>
